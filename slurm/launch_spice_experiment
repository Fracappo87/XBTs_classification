#!/bin/bash

export XBT_EXP_NAME=decisionTree_country
export XBT_JSON_EXP=${XBT_REPO_ROOT}/examples/xbt_param_${XBT_EXP_NAME}.json
echo Launching experiment from file ${XBT_JSON_EXP}
export XBT_INPUT_PATH=/scratch/shaddad/xbt-data/csv_with_imeta/
export XBT_OUTPUT_PATH=/scratch/shaddad/xbt-data/experiment_outputs/

export MEM_ALLOC=20G
export NUM_TASKS=4
export OUTPATH=xbt_exp_${XBT_EXP_NAME}_log.out
export ERRPATH=xbt_exp_${XBT_EXP_NAME}_log.err
export JOB_TIME=60
export JOB_NAME=xbt_job_${XBT_EXP_NAME}
export XBT_QUEUE=normal

sbatch  --job-name ${JOB_NAME} --qos ${XBT_QUEUE} --mem=${MEM_ALLOC} --ntasks=${NUM_TASKS} --output=${OUTPATH} --error=${ERRPATH} --time=${JOB_TIME}  ${XBT_REPO_ROOT}/slurm/run_spice_experiment.sh
