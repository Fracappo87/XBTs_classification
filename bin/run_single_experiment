#!/usr/bin/env python

# add repository to python path
import pathlib
import sys
root_repo_dir = pathlib.Path(__file__).absolute().parent.parent
print(f'root repo {root_repo_dir}')

from azureml.core.run import Run
run = Run.get_context()

import os
print(os.listdir(root_repo_dir))

sys.path = [str(root_repo_dir)] + sys.path

import warnings
warnings.filterwarnings('ignore')

from xbt import classification

return_code = classification.run_single_experiment()

sys.exit(return_code)