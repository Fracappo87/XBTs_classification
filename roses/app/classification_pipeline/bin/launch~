# Base script for launching single experiment classification

TIMESTRING=$(rose date -c -s +P${CYLC_TASK_PARAM_day}D -f "%Y%m%d")
YEAR=${ROSE_TASK_CYCLE_TIME:0:4}
TRAIN=train_${YEAR}.csv
TEST=test_${YEAR}.csv

echo -e "#################\n Year ${YEAR}, experiment ${1}\n\n#################\n"

python2.7 -m classification.classification --path ${SOURCE} --outpath ${{OUTPATH}} --year ${CURRENTY}
                         train test json_descriptor

